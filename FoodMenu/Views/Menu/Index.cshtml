@model List<FoodMenu.Models.Dish>

@{
    ViewData["Title"] = "MenuIndex";
}

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6 mb-5">
                <div class="d-flex justify-content-center">
                     <h4> @item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" alt="Food Image" style="width:70%; height:400px; object-fit:cover" />
                </div>
                <div class="d-flex justify-content-center mb-2" style="font-weight:bold">
                    $ @item.Price.ToString("N2")
                </div>
                <div class="d-flex justify-content-center mb-2">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View Dish</a>
                </div>
            </div>
        }
    </div>
</div>